<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		style="@style/UndoBarKitKat" >

	<TextView
			android:id="@+id/undobar_message"
			style="@style/UndoBarMessageKitKat" />

	<LinearLayout
			android:id="@+id/undobar_button_wrapper"
			style="@style/UndoBarButtonWrapperKitKat" >

		<View
				android:layout_width="1.0dip"
				android:layout_height="match_parent"
				android:background="#7fffffff"
				android:layout_marginRight="16.0dip"
				android:layout_marginEnd="16.0dip" />

		<ImageView
				android:id="@+id/undobar_icon"
				style="@style/UndoBarImageViewKitKat" />

		<TextView
				android:id="@+id/undobar_button"
				style="@style/UndoBarButtonKitKat" />

	</LinearLayout>

</LinearLayout>